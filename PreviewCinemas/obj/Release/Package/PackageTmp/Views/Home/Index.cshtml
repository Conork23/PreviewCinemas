@model IEnumerable<PreviewCinemas.Models.Movie>
@{
    ViewBag.Title = "Home Page";
}


<link href="~/Content/Image-Slider.css" rel="stylesheet" />
<div class="row">
    <div id="slider">
        
        <a href="http://example.com"><img src="~/Images/spectre.jpg" /></a>
        <a href="http://example.com"><img src="~/Images/the_martian.jpg" /></a>
        <a href="http://example.com"><img src="~/Images/hunger_games.jpg" /></a>
        <a href="http://example.com"><img src="~/Images/star_wars.jpg" /></a>
        <a href="http://example.com"><img src="~/Images/deadpool.jpg" /></a>
    </div>

    <script src="~/Scripts/Ideal-Image-slider.js"></script>
    <script>
        var slider = new IdealImageSlider.Slider('#slider');
        slider.start();
    </script>

</div>
<hr />

<div class="row">
    <div class="col-md-12">
       <form class="form-inline"> 
           <div id="searchLbl"class="col-md-2 searchFrom">
               <h4>Search: </h4>
               </div>
           <div class="col-md-4 searchFrom">
               <select style="min-width:100%" class="form-control" id="select">
                   <option selected="true" style="display:none;">Movies</option>
                   @foreach (var item in Model)
                   {
                    <option>@Html.DisplayFor(modelItem => item.Title)</option>
                   }
                   
               </select>
               </div>
           <div id="test" class="col-md-4 searchFrom">
               <select style="min-width:100%; " class="form-control" id="select">
                   <option selected="true" style="display:none;">Date</option>
                   <option>2</option>
                   <option>3</option>
                   <option>4</option>
                   <option>5</option>
               </select>
           </div>
           <div id="searchBtn" class="col-md-2 searchFrom">
               <button  type="submit" class="btn btn-info">Go!</button>
           </div>
</form>
           </div>
</div>