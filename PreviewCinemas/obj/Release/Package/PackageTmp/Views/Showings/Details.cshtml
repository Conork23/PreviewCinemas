@model PreviewCinemas.Models.Showing


@{
    ViewBag.Title = "Details";
}

<div class="row">
    <h2>Showing</h2>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Movie.Title)</th>
                <th>Date</th>
                <th>Time</th>
                <th>Screen Number</th>
                <th>Price</th>
                <th>Add To Cart</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.Movie.Title)</td>
                <td>@Model.DateAndTime.ToShortDateString()</td>
                <td>@Model.DateAndTime.ToShortTimeString()</td>
                <td>@Html.DisplayFor(model => model.Screen.ScreenNumber)</td>
                <td>&euro; @Html.DisplayFor(model => model.Price)</td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Create", "Carts", new { show = Model.ShowingID })">
                        Add
                    </a>

                </td>
            </tr>
        </table>
    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ShowingID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
